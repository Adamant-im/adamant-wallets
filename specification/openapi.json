{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Swagger Adamant-wallets"
  },
  "paths": {},
  "components": {
    "schemas": {
      "TokenGeneral": {
        "allOf": [
          {
            "$ref": "#/components/schemas/TokenGeneral"
          },
          {
            "type": "object",
            "required": [
              "name",
              "website",
              "description",
              "explorer",
              "symbol",
              "type",
              "decimals",
              "qqPrefix",
              "status",
              "links"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "website": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },  
              "explorer": {
                "type": "string"
              },
              "symbol": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": [
                  "coin",
                  "ERC20"
                ]
              },    
              "decimals": {
                "type": "integer"
              },
              "minBalance": {
                "type": "integer"
              },
              "cryptoTransferDecimals": {
                "type": "integer"
              },
              "minTransferAmount": {
                "type": "integer"
              },
              "fixedFee": {
                "type": "integer"
              },  
              "qqPrefix": {
                "type": "string"
              },
              "status": {
                "type": "string",
                "enum": [
                  "active",
                  "disabled"
                ]
              },
              "links": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "url": {
                      "type": "string"
                    }
                  }
                }
              }  
            }
          }
        ]
      },
      "TokenAsset": {
        "allOf": [
          {
            "$ref": "#/components/schemas/TokenAsset"
          },
          {
            "type": "object",
            "required": [
              "name",
              "symbol",
              "type",
              "status",
              "contractId",
              "decimals",
              "explorer"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "symbol": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": [
                  "coin",
                  "ERC20"
                ]
              }, 
              "status": {
                "type": "string",
                "enum": [
                  "active",
                  "disabled"
                ]
              },
              "contractId": {
                "type": "string"
              },
              "decimals": {
                "type": "integer"
              },
              "explorer": {
                "type": "string"
              }
            }
          }
        ]
      }
    }
  }
}
